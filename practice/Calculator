#include <iostream>

using namespace std;
int main() {
    char move, change, again;// in char because wont work in int
    int n1, n2 , results;
  do{
std::cout<< "----calculator---"<<endl;
 std::cout<<"1.addition"<<endl;
 std::cout<<"2.subtraction"<<endl;
 std::cout<<"3.Multiplication"<<endl;
 std::cout<<"4.division"<<endl;
 std::cout<<"5.exit"<<endl;

std::cout<<"choose command: ";
std::cin>> move;
    
switch(move){
    case '1':
    cout<< "Enter number 1: ";
    cin>>n1;
    cout<<"Enter number 2: ";
    cin>>n2;
    results = n1 + n2;
    cout<< "the result is"<< results<<endl; 
    break;

    case '2':
    cout<<" Enter number 1: ";
    cin>>n1;
    cout<<"enter number 2: ";
    cin>>n2;
    results = n1 - n2;
    cout<< "The results is "<<results<<endl;
    break;
    
    case '3':
    cout<<"Enter number 1: ";
    cin>>n1;
    cout<<"Enter number 2: ";
    cin>>n2;
    results = n1 *n2;
    cout<< "the results is "<<results<<endl;
    break;
    
    case '4':
    cout<<"Enter number 1: ";
    cin>>n1;
    cout<<"Enter number 2: ";
    cin>>n2;
    if(n2 == 0){
        cout<<"Number cannot be divided"<<endl;
    }
    else{
    results = n1/n2;
    cout<<"the results is "<<results<<endl;
    }
    break;
    default:
     cout<<"closing program"<<endl;
    break;
}
   cout<< "Do you want to try again? (y/n)";
   cin>> again;

}while( again == 'y' || again == 'Y');
 cout<<"closing program";
    return 0 ;
}
