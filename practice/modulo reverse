#include <iostream>
using namespace std;

int main (){
 int number , reverse = 0, digit;
 cout<<"Enter number: ";
 cin>>number;
 
 while (number != 0){// number not 0
 digit = number % 10;// 10 = tens
 reverse = reverse * 10 + digit ;
 number = number / 10;
  }
  cout<<"reversed : "<<reverse << endl;
return 0;
}
